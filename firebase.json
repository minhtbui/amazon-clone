{
   "functions": {
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"],
      "source": "functions"
   },
   "hosting": {
      "site": "mtb-amzon-clone",
      "public": "build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
         {
            "source": "**",
            "destination": "/index.html"
         }
      ]
   }
}
